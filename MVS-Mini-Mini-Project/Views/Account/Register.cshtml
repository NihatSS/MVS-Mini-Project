@model RegisterVM

@{
    Layout = null;
}

<link href="~/assets/css/custom.css" rel="stylesheet" />
<link href="~/assets/css/bootstrap.css" rel="stylesheet" />

<section class="register bg-image" style="background-color:yellowgreen">
    <div class="mask d-flex align-items-center gradient-custom-3">
        <div class="container h-100" style="padding:50px">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-3">Create an account</h2>

                            <form asp-action="Register" method="post">

                                <div class="form-outline">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input asp-for="Username" class="form-control form-control-lg" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-outline">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label"></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account?
                                    <a asp-controller="Account" asp-action="Login" class="fw-bold text-body"><u>Login here</u></a>
                                </p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
