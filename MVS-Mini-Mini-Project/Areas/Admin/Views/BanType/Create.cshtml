@model BanType

<div class="container mt-5">
    <h3 class="text-center">Create slider</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <input type="text" asp-for="Name" class="form-control mt-3" placeholder="Enter ban type name...">
        <span class="text-danger d-block" asp-validation-for="Name"></span>

        <button type="submit" class="btn btn-success mr-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary mx-2 mt-3">Cancel</a>
    </form>
</div>