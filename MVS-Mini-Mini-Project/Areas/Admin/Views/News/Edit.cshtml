@model News

<div class="container mt-5">
    <h3 class="text-center">Edit category</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="text" asp-for="Title" class="form-control mt-5" placeholder="Category">
        <span class="text-danger d-block" asp-validation-for="Title"></span>
        <input type="text" asp-for="Desc" class="form-control mt-5" placeholder="Category">
        <span class="text-danger d-block" asp-validation-for="Desc"></span>
        <div class="mt-3">
            <img src="~/assets/img/@Model.Image" style="width:300px;height:150px;" />
        </div>
        <input asp-for="Photo" class="form-control mt-5">
        <button type="submit" class="btn btn-success mr-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary mx-2 mt-3">Cancel</a>
    </form>
</div>
