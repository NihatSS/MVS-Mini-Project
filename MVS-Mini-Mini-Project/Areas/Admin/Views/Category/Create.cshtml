@model Category

<div class="container mt-5">
    <h3 class="text-center">Create new category</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="text" asp-for="Name" class="form-control mt-5" placeholder="Enter category's name">
        <span class="text-danger d-block" asp-validation-for="Name"></span>
        <input asp-for="Photo" class="form-control mt-3">
        <span class="text-danger d-block" asp-validation-for="Photo"></span>
        <button type="submit" class="btn btn-success mr-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary mx-2 mt-3">Cancel</a>
    </form>
</div>
