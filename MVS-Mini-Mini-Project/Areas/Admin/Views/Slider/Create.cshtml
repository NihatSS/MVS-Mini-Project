@model Slider

<div class="container mt-5">
    <h3 class="text-center">Create slider</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <input type="text" asp-for="Title" class="form-control mt-3" placeholder="Enter slider title...">
        <span class="text-danger d-block" asp-validation-for="Title"></span>

        <input type="text" asp-for="Desc" class="form-control mt-3" placeholder="Enter slider description...">
        <span class="text-danger d-block" asp-validation-for="Desc"></span>


        <button type="submit" class="btn btn-success mr-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary mx-2 mt-3">Cancel</a>
    </form>
</div>