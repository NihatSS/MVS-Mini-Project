@model List<Slider>

<div class="container mt-5">
    <h1 class="text-center">Slider</h1>
    <div class="create-area">
        @if (Model.Count == 0)
        {
            <a asp-action="Create" class="btn btn-success">Create</a>
        }
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-responsive pt-3 mt-3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td style="width:400px">
                                @item.Desc
                            </td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary">Detail</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-5" role="alert">
            Data not added yet
        </div>
    }

</div>